{
  "$id": "https://schemas.ory.sh/presets/kratos/quickstart/email-password/identity.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "Email",
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            },
            "recovery": {
              "via": "email"
            },
            "verification": {
              "via": "email"
            }
          }
        },
        "displayName": {
          "type": "string",
          "title": "Name"
        },
        "role": {
          "enum": ["volounteer", "coordinator", "admin"],
          "type": "string",
          "title": "Role"
        }
      },
      "required": [
        "email",
        "displayName",
        "role"
      ],
      "additionalProperties": false
    }
  }
}
